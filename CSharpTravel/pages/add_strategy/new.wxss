/* pages/add_strategy/add_strategy.wxss */
page{
  width: 100%;
  height: 100%;
  align-items: center;
  background-color: rgb(255, 255, 255);
}

.whole {
  height: 100%;
  width: 100%;
  align-items: center;
  background-color: rgb(255, 255, 255);
}

textarea{
  margin-top: 5rpx;
  height: auto;
  padding: 20rpx 30rpx;
  width: 92%;
  font-size: 35rpx;
  background-color: white;
  border-radius: 20rpx;
  min-height: 600rpx;
  line-height: 2;
}

.input-title{
  font-size: 40rpx;
  text-align: center;
  color:blue;
}

.submit{
    background-color:#0577ac;
    width: 30%;
    font-size: 17px;
    line-height: 2;
    align-items: center;
    color: white;
    margin-top: 10rpx;
}

.img-v{
  padding: 20rpx;
  display:flex;
	flex-direction: row ;
  flex-wrap:wrap; 
  background-color: white;
  min-height: 200rpx;
  border-radius: 20rpx;
}

.img{
  width:230rpx;
  height:200rpx;
  margin-bottom: 10rpx;
}

.upImg{
  width: 99%;
  height: 200rpx;
}

.delete-btn{
  position: relative;
  top:42rpx;
  left: 86%; 
  opacity: 0.6;
  background-color: grey;
  width:32rpx;
  height: 32rpx; 
  z-index: 5;
}

.upload-img-btn{
    width: 200rpx;
    height: 200rpx;
    margin-top: 42rpx;
}

.upload-img-btn image{
    width:100rpx;
    height: 100rpx;
    opacity:0.4;
    padding-left:3%;
    padding-right:3%;
}

.preview{
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: rgba(0, 0, 0, 0.7);  
  opacity: 0;
  overflow: hidden; 
}

.preview image{
  width: 100%;
  max-height: 100%;
  display: flex;
  margin-top: 10%;
justify-content: center; 
align-items: center;
}

.form1 {
  width: 100px;
  height: 100px;
  align-items: center;
}

.view1 {
  margin-top: 10rpx; 
  display:flex;
  flex-direction: column;
  justify-content: center;
}

.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  font-size: 35rpx;
  overflow: hidden;
  text-align: center;
  color: blue;
}