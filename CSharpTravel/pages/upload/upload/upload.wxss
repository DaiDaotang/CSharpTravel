/* pages/upload/upload.wxss */
page{
  align-items: center;
  background-color: rgb(110, 178, 238);
}

.whole {
  align-items: center;
}

textarea{
  width: 90%;
  background-color: white;
  border-radius: 20rpx;
}

.input-title{
  font-size: 40rpx;
  text-align: center;
}

.submit{
    background-color:#0577ac;
    width: 50%;
    font-size: 17px;
    line-height: 2.1;
    align-items: center;
    color: white;
    margin-top: 30rpx;
}

.img-v{
  margin-top: 20rpx; 
  padding: 20rpx;
  display:flex;
	flex-direction: row ;
  flex-wrap:wrap; 
  background-color: white;
  min-height: 530rpx;
  border-radius: 20rpx;
}

.img{
  width: 33%;
  height: 200rpx;
  margin-bottom: 10rpx;
}

.upImg{
  width: 99%;
  height: 200rpx;
}

.delete-btn{
  position: relative;
  top:42rpx;
  left: 86%; 
  opacity: 0.6;
  background-color: grey;
  width:32rpx;
  height: 32rpx; 
  z-index: 5;
}

.upload-img-btn{
    width: 33%;
    margin-top: 42rpx;
}

.upload-img-btn image{
    width:86%;
    height:200rpx;
    opacity:0.4;
    padding-left:3%;
    padding-right:3%;
}

.preview{
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: rgba(0, 0, 0, 0.7);  
  opacity: 0;
  overflow: hidden; 
}

.preview image{
  width: 100%;
  max-height: 100%;
  display: flex;
  margin-top: 10%;
justify-content: center; 
align-items: center;
}

.form1 {
  width: 100px;
  height: 100px;
  align-items: center;
}

.view1 {
  margin-top: 10rpx; 
  display:flex;
  flex-direction: row;
  justify-content: center;
}
